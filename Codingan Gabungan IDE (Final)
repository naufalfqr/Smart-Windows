#include "DHT.h"
#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <Servo.h>

#define DHTPIN D7
#define TAMPIL_SERIAL true

#define DHTTYPE DHT11

#define LDR A0
 
LiquidCrystal_I2C lcd(0x27, 16, 2); // Alamat I2C, jumlah kolom, jumlah baris
DHT dht(DHTPIN, DHTTYPE);

const byte KARAKTER_DERAJAT = 0;
byte derajat[] = {
  B00111,
  B00101,
  B00111,
  B00000,
  B00000,
  B00000,
  B00000,
  B00000
};
int hum = 0, temp = 0;

Servo myservo;

int ENA = 2;
int IN1 = 14;
int IN2 = 12;

void setup() {
#if TAMPIL_SERIAL
  Serial.begin(9600);
  Serial.println(F("DHT 11 !"));
#endif

  lcd.begin();
  lcd.createChar(KARAKTER_DERAJAT, derajat);
  lcd.backlight();
  lcd.setCursor(0, 0);
  lcd.print("TEMPERATUR :");
  lcd.setCursor(0, 1);
  lcd.print("HUMIDITY   :");

  dht.begin();
  myservo.attach(0); //D3
  myservo.write(0);
  delay(2000);

  pinMode(ENA, OUTPUT);
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
}

void motorDC() {

// turn on motors
  int valDC = analogRead(LDR);  
  Serial.begin(9600);
  Serial.println(valDC);  
  
  int nilaiSensorDC;
  nilaiSensorDC = analogRead(LDR);

  if(nilaiSensorDC <=200){
    digitalWrite(ENA, HIGH);
    digitalWrite(IN1, HIGH);
    digitalWrite(IN2, LOW);
  }
  else{
    digitalWrite(IN1, LOW);
    digitalWrite(IN2, LOW);
  }
}

void loop() {
  delay(2000);  // Delay untuk 
  
  hum = dht.readHumidity();
  temp = dht.readTemperature(); // Baca temperatur dalam celcius (default)

  if (isnan(hum) || isnan(temp)) {
#if TAMPIL_SERIAL
  Serial.println(F("Failed to read from DHT sensor!"));
#endif
    return;
  }

  lcd.setCursor(13, 0);
  lcd.print(temp);
  lcd.setCursor(13, 1);
  lcd.print(hum);

  if(temp < 10){
    lcd.setCursor(14, 0);
  }else{
    lcd.setCursor(15, 0);
  }
  lcd.write(KARAKTER_DERAJAT);

  if(temp < 10){
    lcd.setCursor(15, 1);
  }else{
    lcd.setCursor(16, 1);
  }
  lcd.print("C");

  if(hum < 10){
    lcd.setCursor(14, 1);
  }else{
    lcd.setCursor(15, 1);
  }
  lcd.print("%");
  
#if TAMPIL_SERIAL
  Serial.println("\n================");
  Serial.print(F("Temperature: ")); Serial.print(temp); Serial.println(F("Â°C "));
  Serial.print(F("Humidity: ")); Serial.print(hum); Serial.println("%");
#endif

  int val = analogRead(LDR);  
  Serial.println(val);  
  delay(1000);

 if (temp >= 23){
  myservo.write(180);
  delay(1000);
 }else{
  myservo.write(0);
  delay(1000);
 }

 motorDC();
}
